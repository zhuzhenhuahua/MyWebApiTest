
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_BaseEChartsContent.cshtml";
}

<div id="stackedLine" style="width:100%;height:800px;"></div>
<script type="text/javascript">
    var stackedline = echarts.init(document.getElementById("stackedLine"));
    $(function () {
        $.post("/ECharts/GetPriceJson", null, function (result) {
            option = {
                title: {
                    text: '折线图堆叠'
                },
                tooltip: {
                    trigger: 'axis'
                },
                legend: {
                    data: result.legend
                },
                calculable: true,
                xAxis: {
                    type: 'category',
                    data: result.xData
                },
                yAxis: {
                    type: 'value'
                },
                series: result.ySeries
            };
            stackedline.setOption(option);
        });
        
    });
</script>

